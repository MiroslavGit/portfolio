<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>API Helper</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Custom color theme */
        body {
            background-color: #f7f7f7;
        }

        h1 {
            color: #007bff;
        }

        .list-group-item {
            background-color: #fff;
            border-color: #007bff;
            color: #333;
            cursor: pointer;
            /* Add cursor pointer to show it's clickable */
        }

        .badge.bg-primary {
            background-color: #007bff;
        }

        /* Additional styling for the content that will be shown on click */
        .collapse-content {
            background-color: #f7f7f7;
            padding: 10px;
            border: 1px solid #007bff;
        }
    </style>
</head>

<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">API Helper</h1>
        <div class="row">
            <div class="col-md-6 mx-auto">
                <ul class="list-group">
                    <% apiRoutes.forEach((route)=> { %>
                        <li class="list-group-item d-flex justify-content-between align-items-center"
                            data-bs-toggle="collapse" data-bs-target="#collapse-<%- route.route %>">
                            <span><%- route.route %></span>
                            <span class="badge bg-primary"><%- route.description %></span>
                        </li>
                        <div class="collapse collapse-content" id="collapse-<%- route.route %>">
                            <p><%- route.details %></p>
                        </div>
                        <% }) %>
                </ul>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
</body>

</html>